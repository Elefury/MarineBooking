# ============================================
# Basic Application Configuration
# ============================================
APP_NAME=MarineBooking
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://marine-booking-n-rent.local

# ============================================
# Localization
# ============================================
APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

# ============================================
# Maintenance Mode
# ============================================
APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

# ============================================
# Development
# ============================================
PHP_CLI_SERVER_WORKERS=4
BCRYPT_ROUNDS=12

# ============================================
# Logging
# ============================================
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# ============================================
# Database Configuration
# ============================================
DB_CONNECTION=mysql
DB_HOST="MySQL-8.2"
DB_PORT=3306
DB_DATABASE=marine_booking
DB_USERNAME=root
DB_PASSWORD=

# ============================================
# Session Configuration
# ============================================
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_SECURE_COOKIE=false
SESSION_DOMAIN=null

# ============================================
# Sanctum (API Authentication)
# ============================================
SANCTUM_STATEFUL_DOMAINS=marine-booking-n-rent.local

# ============================================
# Cookie Settings
# ============================================
COOKIE_SECURE=false
COOKIE_SAMESITE=lax

# ============================================
# Queue & File System
# ============================================
BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

# ============================================
# Caching
# ============================================
CACHE_STORE=database
CACHE_DRIVER=file
# CACHE_PREFIX=

# ============================================
# Memcached
# ============================================
MEMCACHED_HOST=127.0.0.1

# ============================================
# Redis
# ============================================
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# ============================================
# Mail Configuration
# ============================================
MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# ============================================
# AWS/S3 Storage
# ============================================
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# ============================================
# Stripe Payments
# ============================================
STRIPE_KEY=
STRIPE_SECRET=
STRIPE_WEBHOOK_SECRET=

# ============================================
# External APIs
# ============================================
WEATHER_API_KEY=

# ============================================
# Vite Frontend Build
# ============================================
VITE_APP_NAME="${APP_NAME}"